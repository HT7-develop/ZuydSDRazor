@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ZuydApp.Pages.Oefening2Model
@{
    Layout = "_Layout";
    ViewData["Title"] = "Oefening 2";
    string tijd = DateTime.Now.ToString();
    int getal = 6;
    bool isEvenGetal(int getal)
    {
        int result = getal % 2;
        if (result == 0)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
}

<div class="main">
    <h1>Dit is @ViewData["Title"]</h1>
    <br />
    <div>De tijd is: @tijd</div>
    <h3>is het getal @getal even? @isEvenGetal(getal)</h3>
    <a asp-page="Index">Ga naar Home</a>
</div>
