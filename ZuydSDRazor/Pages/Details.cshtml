@page
@using ZuydSDRazor.Models;
@model ZuydSDRazor.Pages.DetailsModel
@{
    Layout = "_Layout_Courses";
    ViewData["Title"] = "Jo Bonten | Video";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<body>
    <nav class="navigation">
        <a asp-page="Index">Home</a>
        <a asp-page="Onderwerpen">Onderwerpen</a>
        <a asp-page="Videos">Videos</a>
    </nav>
    <div class="row" style="margin: 0px 20px 0px 20px; padding-top:8rem;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Video</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Onderwerp?.Videos?.Any() ?? true)
                {
                    @foreach (Video rij in Model.Onderwerp?.Videos ?? Enumerable.Empty<Video>())
                    {
                        <tr>
                            <td class="align-middle">@rij.Titel</td>
                            <td class="align-middle"><iframe allowfullscreen width="300" height="150" src="@rij.Link"></iframe></td>
                        </tr>
                    }
                }
                else
                {
                    <tr style="color:red">
                        <td>Niks om weer te geven...</td>
                        <td>Niks om weer te geven...</td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Onderwerpen</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Video?.Onderwerpen?.Any() ?? true)
                {
                    @foreach (Onderwerp rij in Model.Video.Onderwerpen ?? Enumerable.Empty<Onderwerp>())
                    {
                        <tr>
                            <td class="align-middle">@rij.Beschrijving</td>
                        </tr>
                    }

                }
                else
                {
                    <tr style="color:red">
                        <td>Niks om weer te geven...</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
